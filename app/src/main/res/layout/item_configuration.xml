<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      cardView:cardElevation="6dp"
      cardView:cardCornerRadius="2dp"
      cardView:cardBackgroundColor="@color/lightgray"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/actionArea1"
          android:paddingTop="24dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:paddingBottom="16dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuration"
            android:id="@+id/titleTextView"
            android:layout_gravity="left"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorPrimaryText"
            android:textSize="24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The configuration represents the boards dimension"
            android:id="@+id/textView7"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorSecondaryText"
            />

      </LinearLayout>
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/supportingTextArea"
          android:padding="16dp"
          >
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
              <TextView
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="Width"
                  android:id="@+id/textView12"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="10"
                  android:id="@+id/widthTextView"
                  />
          </LinearLayout>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
              <TextView
                  android:layout_width="72dp"
                  android:layout_height="wrap_content"
                  android:text="Height"
                  android:id="@+id/textView11"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="10"
                  android:id="@+id/heightTextView"
                  />
          </LinearLayout>
          <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
          <TextView
              android:layout_width="72dp"
              android:layout_height="wrap_content"
              android:text="Difficulty"
              android:id="@+id/textView9"
              />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hard (45% Bombs)"
                android:id="@+id/difficultyTextView"
                />
        </LinearLayout>
      </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/actionArea"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:background="@color/divider"
                >
            </FrameLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/startButton"
                android:layout_gravity="right"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
        </LinearLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>

</LinearLayout>